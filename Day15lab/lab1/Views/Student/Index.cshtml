@model List<lab1.Models.Student>

<a asp-action="Create" class="btn btn-primary">Thêm sinh viên</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Điểm</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBirth.ToShortDateString()</td>
                <td>
                    @{
                        string branchName = s.Branch switch
                        {
                            lab1.Models.Branch.IT => "CNTT",
                            lab1.Models.Branch.BE => "Kinh tế",
                            lab1.Models.Branch.CE => "Công trình",
                            lab1.Models.Branch.EE => "Điện - Điện tử",
                            _ => ""
                        };
                    }
                    @branchName
                </td>
                <td>@(s.Gender == lab1.Models.Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
                <td>@s.Score</td>
            </tr>
        }
    </tbody>
</table>

