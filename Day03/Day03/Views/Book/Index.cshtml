@model IEnumerable<Day03.Models.Book>
@{
    ViewData["Title"] = "Index";

}
<h2>Danh sach cac cuon sach</h2>
<!--Hien thi cac combobox tren form-->
<form action="" method="POST" class=" "form-inline' role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-asp-items="@ViewBag.authors">
            <option value="">Chon tac gia</option>
        </select>
        <select name="GenreId" class="form-control" asp-asp-items="@ViewBag.genres">
            <option value="">Chon the loai</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">tim kiem</button>
    <a asp-action="Create" class="btn btn-danger">Them moi</a>
</form>
<hr />
<!--hien thi danh sach cac cuon sach-->
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tieu de</th>
            <th>tac gia</th>
            <th>the loai</th>
            <th>Gia</th>
            <th>Hinh Anh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40"/>
                </td>
                <td>
                    <a asp-action="Edit" class="btn tbn-sm btn-primary">Sua</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
