@{
        ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
}
@model IEnumerable<lab1.Models.Student>

<a asp-action="Create" class="btn btn-primary">Create Student</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBorth.ToShortDateString()</td>
                <td>
                    @{
                        string branchName = "";
                        switch (s.Branch)
                        {
                            case Branch.IT:
                                branchName = "CNTT";
                                break;
                            case Branch.BE:
                                branchName = "Kinh tế";
                                break;
                            case Branch.CE:
                                branchName = "Công trình";
                                break;
                            case Branch.EE:
                                branchName = "Điện - Điện tử";
                                break;
                        }
                    }
                    @branchName
                </td>
                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        var table = document.querySelector("table");
        table.onclick = function onTableClick() {
            table.style = "background-color: yellow;";
        }
    </script>
}

